<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>

        <link rel="stylesheet" href="/style.css">

    </head>
    <body>

      <div id="container">

        <% include ../partials/header.ejs %>
        <div class="show-page">
        <% if (message) { %>
          <%= message %>
        <% } %>
        <div class="log-in">
        <h1>log in</h1>
          <form action="/user/login" method="post">
          <ul>
            <li class="login">Username:</li> <input name="username" /> <br />
            <li class="login">Password:</li> <input name="password" /><br />
          </ul>
            <button type="submit">Submit</button>
          </form>
        </div>

        <div class="register">
          <h1>register</h1>
          <form action="/user/register" method="POST">
            <ul>
            <li class="login">Username:</li><input name="username" /> <br />
            <li class="login">Password:</li><input name="password" /><br />
            </ul>
            <button type="submit">Register</button>
          </form>
        </div>

        </div>

      </div>
    </body>
</html>
